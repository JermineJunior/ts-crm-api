{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution" : "node",

    "outDir" : "./dist",
    "sourceMap" : false,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false
  },

  "include" : ["/src/**/*"],
  "exclude": ["node_modules" , "dist/*" , "src/static" ],
  "lib" : ["es6"]
}